<div class="container">

  <h1>My profile</h1>
  <div>
    <h4>Doctor info</h4>
    <p>Dr <%= @user.first_name %><%= @user.last_name %></p>
    <p><%= @user.specialization %></p>
    <p><%= @user.email %></p>
    <hr>
  </div>

  <div>
    <h4>My projects</h4>
    <%= link_to "+ project", new_project_path %>
    <ul>
      <% @user.admin_projects.each do |project| %>
        <li><%= link_to project.name, project_path(project) %></li>
      <% end %>
    </ul>
  </div>

  <div>
    <h4>My cases</h4>
    <%= link_to "+ case", new_case_path %>
      <ul class="cards-container">
        <% @user.cases.each do |one_case| %>
          <li class="card-case">
            <div class="card-main-infos">
              <%= link_to(case_path(one_case)) do %>
                <%= one_case.title %>:
              <% end %>
              <br><%= one_case.description %>
            </div>
            <!-- add link to patient profile page-->
            <br>
            <div class="card-bottom-infos">
              <%= link_to(patient_path(one_case.patient)) do %>
                Patient <%= one_case.patient.id %>:
              <% end %>
              <%= link_to "Edit", edit_case_path(one_case) %>
              <%= link_to "Delete", case_path(one_case), method: :delete, data: { confirm: "Are you sure?"} %>
            </div>
          </li>
        <% end %>
      </ul>
  </div>

  <div>
    <h4>My patients</h4>
    <%= link_to "+ patient", new_case_path %>
      <ul>
        <% @user.patients.each do |patient| %>
          <li>
            <%= link_to(patient_path(patient)) do %>
              Patient <%= patient.id %>:
            <% end %>
            <%= patient.first_name %> <%= patient.last_name %>
          </li>
        <% end %>
      </ul>
  </div>

  <div>
    <h4>My collaborations</h4>

      <ul>
        <% @user.my_collaborations.each do |collaboration| %>
          <li>
            <%= link_to collaboration.project.name, project_path(collaboration.project) %>
          </li>
        <% end %>
      </ul>

  </div>

</div>

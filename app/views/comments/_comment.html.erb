<div class="comment-container d-flex" id="comment-<%= comment.id %>">
  <% if comment.user.avatar.attached? %>
    <div class="mr-2"><%= cl_image_tag comment.user.avatar.key, class: "avatar" %></div>
  <% else %>
    <div class="mr-2"><%= image_tag "logo.png", class: "avatar" %></div>
  <% end %>
  <div>
    <div class="user-info flex-column">
        <%= link_to comment.user.full_name, user_path(comment.user), class: "doctor-name" %>
        <div>
          <span class="user-info-detail mr-2"><%= comment.user.specialization %></span>
          <small><%= comment.created_at.strftime("%a %b %e at %l:%M%p") %></small>
        </div>
    </div>
    <p class="comment-text"><%=  comment.content %></p>
  </div>
</div>

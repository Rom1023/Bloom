<div class="small-banner"></div>
  <div class="container py-5">
    <div class="mt-3">
      <h4>Doctor info:</h4>
      <p>Dr <%= @case.user.first_name %><%= @case.user.last_name %></p>
      <p><%= @case.user.specialization %></p>
      <p><%= @case.user.email %></p>
    </div>
    <%= link_to "Back to list of cases", cases_path, class: "btn-s-blue mt-2" %>
  </div>

    <div>
      <h2 class="mb-3">Case: <%= @case.title %></h2>
      <% if current_user == @case.user %>
        <%= link_to "Edit", edit_case_path(@case), class: "btn-s-blue" %>
        <%= link_to "Delete", case_path(@case), method: :delete, data: { confirm: "Are you sure?"}, class: "btn-s-blue" %>
      <% end %>
      <h4 class="mt-3">Description:</h4>
      <p><%= @case.description %></p>

      <div>
        <% @case.patient.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      </div>
      <div>
        <% @case.patient.documents.each do |document| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      </div>

    </div>



<div class ="container">
  <div class="d-flex justify-content-between my-3">
    <h1>Projects</h1>
    <div>
      <%= form_tag projects_path, method: :get, class: "d-flex justify-content-center" do %>
        <%= button_tag :submit, class: "btn btn-search-index" do %>
          <i class="fas fa-search"></i>
        <% end %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control search-bar-index",
          placeholder: ""
        %>
      <% end %>
    </div>
  </div>
  <ul id ="project-container">
    <% @projects.each do |project| %>
      <li >
        <div class="card-project">
          <div class="card-main-infos">
            <div class="card-project-top-infos">
              <p><strong><%= project.links.count %></strong> cases</p>
              <p><strong><%= project.collaborations.count %></strong> collaborators</p>
            </div>
            <h2><%= link_to project.name, project_path(project) %></h2>
            <p><%= project.description %></p>
            <span>PROJECT</span>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>

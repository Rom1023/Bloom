  <div>
    <div class="banner-title ml-0 text-center">
      <h1>Dedication is our specialty</h1>
    </div>

    <div class="">
      <%= form_tag projects_path, method: :get, class: "d-flex justify-content-center" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control search-bar-lg w-100 mr-3",
            placeholder: "Search a project"
          %>
          <%= button_tag :submit, class: "btn btn-r-blue" do %>
            <i class="fas fa-search"></i>
          <% end %>
      <% end %>
    </div>
  </div>
